<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="@dimen/cardview_width"
    android:layout_height="@dimen/cardview_height"
    card_view:cardBackgroundColor="@color/backgroundItem"
    android:layout_marginBottom="@dimen/dimension10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/backgroundItem"
        >

        <TextView
            android:id="@+id/webtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="@dimen/fontsize12"
            tools:text="Title"
            android:lines="4"
            android:padding="@dimen/dimension5"
            android:background="@drawable/category_rectangle"
            android:textColor="@color/titleTextcolor"/>

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="@dimen/cardview_width"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:src="@drawable/no_image"
            android:contentDescription="The thumnail, if it is present, of the article"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimension10"
            >

            <TextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:textSize="@dimen/fontsize10"
                android:paddingLeft="@dimen/dimension5"
                tools:text="Mar 6, 2010"
                android:lines="2"
                android:textColor="@color/textcolor"
                />

            <TextView
                android:id="@+id/section"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="@dimen/fontsize10"
                android:paddingRight="@dimen/dimension5"
                tools:text="Section name"
                android:lines="2"
                android:textColor="@color/textcolor"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/trial_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fontsize14"
            android:layout_marginTop="@dimen/dimension10"
            android:lines="3"
            android:padding="@dimen/dimension5"
            tools:text="Long placeholder location that should wrap to more than 2 lines of text"
            android:textColor="@color/textcolor"
            />

        <TextView
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="@dimen/fontsize10"
            android:layout_marginTop="@dimen/dimension10"
            android:paddingBottom="@dimen/dimension10"
            android:paddingLeft="@dimen/dimension5"
            tools:text="Author"
            android:lines="1"
            android:textColor="@color/textcolor"
            />

    </LinearLayout>
</android.support.v7.widget.CardView>